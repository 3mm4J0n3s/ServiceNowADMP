        <xml><![CDATA[<?xml version="1.0" encoding="utf-8" ?>
<j:jelly trim="false" xmlns:j="jelly:core" xmlns:g="glide" xmlns:j2="null" xmlns:g2="null">
	<div class="overlay">
		<div class="position-center">
			<img src="admp-loading.gif" width="24" height="24"/>
			<span class="loading-text"></span>
		</div>
	</div>
	<script>
		function freezeWindow(isFreeze, loadingText) {
			if(isFreeze) {
				$j(".overlay").show();
				if(loadingText == null || loadingText == "") {
					$j(".loading-text").text("");
				} else {
					$j(".loading-text").text(loadingText);
				}
				
			} else {
				$j(".overlay").hide();
			}
		}
	</script>
	<style>
		/* ----------Overlay starts----------- */
		.overlay {
			position: fixed;
			display: none;
			width: 100%;
			height: 100%;
			top: 0;
			left: 0;
			right: 0;
			bottom: 0;
			background-color: rgba(0,0,0,0);
			z-index: 1000;
			cursor: default;
		}
		.position-center {
			position: absolute;
			top: 50%;
			left: 50%;
			transform: translate(-50%,-50%);
			-ms-transform: translate(-50%,-50%);
			box-shadow: 0px 0px 10px 2px rgb(0 0 0 / 16%);
			color: black;
			padding: 10px;
			background-color: white;
		}
/* ----------Overlay ends----------- */
	</style>
</j:jelly>]]></xml>
