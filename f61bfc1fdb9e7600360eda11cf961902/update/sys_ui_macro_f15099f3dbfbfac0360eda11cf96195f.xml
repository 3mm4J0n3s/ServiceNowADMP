        <xml><![CDATA[<?xml version="1.0" encoding="utf-8" ?>
<j:jelly trim="false" xmlns:j="jelly:core" xmlns:g="glide" xmlns:j2="null" xmlns:g2="null">
	<tr parent_container_id="" id="Manager">
		<td class="iotd"> 
			<div class="row sc-row">
				<div class="form-group sc-row">
					<div nowrap="true">
						<label class="col-xs-12 control-label">
							<span id="manager_label">Manager</span>
						</label>
					</div>
					<div class="col-xs-3 form-field input_controls">
						<input type="text" class="cat_item_option sc-content-pad form-control" name="setManager" id="setManager" disabled="disabled"/>
					</div>
					<button onclick="openManagerListPopup()" id="select_manager" type="button" style="margin-left:8px;">
						<img src="icon_manager.png" width="15" height="15"/>
					</button>
					<button onclick="clearManager()" id="clear_manager">
						<a class="linkblacktxt" style="display: block; text-decoration:none;"><img src="icon_clear.png" width="15" height="15"/><span style="color:black;">Clear</span></a>
					</button>
				</div>
			</div>
		</td>
	</tr>
	<style type="text/css">
		.button {
			padding: 10px;
			background: url(addToGroup.png) no-repeat;
			background-size: 25px 25px;
			cursor: pointer;
			border: none;
		}
		.equalButton {
			padding: 5px;
			margin-left: 5px;
		}
	</style>
	<script>
		var selectedManager = [];
		function openManagerListPopup() {
			var dialog = new GlideDialogWindow("x_manen_admanager_ADManagerManagersList");   
			dialog.setTitle("Set a Manager");   
			dialog.setSize(750, 400);
			dialog.setPreference("selectedDomain", g_form.getValue('Select_Domain')); 
			dialog.setPreference("selectedManager", selectedManager);
			dialog.render();  
		}
		
		function updateForm() {
			$j("#setManager").val((selectedManager.length > 0)? selectedManager[0].name: '');
		}
		
		function clearManager() {
			selectedManager.splice(0, selectedManager.length);
			$j("#setManager").val('');
		}
		
		function getManagerName() {
			if(selectedManager.length > 0) return selectedManager[0].name;
			else return '';
		}
		
		function getManagerDN() {
			if(selectedManager.length > 0) return (selectedManager[0].distinguishedname);
			else return '';
		}
		
		function setManagerDetails(managerName, managerDN) {
			$j("#setManager").val(managerName);
			var manager = {};
			manager.name = managerName;
			manager.distinguishedname = managerDN;
			selectedManager.push(manager);
		}
		
		function disableManagerSelection() {
			$j("#select_manager").prop('disabled', true);
			$j("#clear_manager").prop('disabled', true);
		
			document.getElementById('setManager').style.backgroundColor = '#f4f4f4';
			document.getElementById('setManager').style.border = '1px solid #ddd';

			document.getElementById('select_manager').style.backgroundColor = '#f4f4f4';
			document.getElementById('select_manager').style.border = '1px solid #ddd';

			document.getElementById('clear_manager').style.backgroundColor = '#f4f4f4';
			document.getElementById('clear_manager').style.border = '1px solid #ddd';
		}
		
		function showManagerVariable(isShow) {
			if(isShow == true) {
				$j("#Manager").show();
			} else {
				$j("#Manager").hide();
			}
		}
	</script>
</j:jelly>]]></xml>
